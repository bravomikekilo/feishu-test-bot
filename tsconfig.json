{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "ES6",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": false,
        "outDir": "./dist",
        "strict": true
    },
    "include": [
        "**/*.ts"
    ],
    "exclude": [
        "node_modules/**/*"
    ]
}